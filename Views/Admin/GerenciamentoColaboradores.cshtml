    <div class="modal fade" id="modalPromover" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-white"><i class="fas fa-user-shield me-2"></i>Promover Usuário</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body text-center">
                    <p>Usuário já cadastrado como adotante. Deseja promover este usuário para colaborador?</p>
                    <input type="hidden" id="usuarioPromocaoId" value="">
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="botao-contorno-secundario" data-bs-dismiss="modal"><i class="fas fa-times me-2"></i>Cancelar</button>
                    <button type="button" id="botaoConfirmarPromocao" class="botao-acao-rapida"><i class="fas fa-check me-2"></i>Confirmar</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            // Prevenir que os links de paginação façam o conteúdo desaparecer
            $('.pagination .page-link').on('click', function(e) {
                e.preventDefault(); // Previne o comportamento padrão do link
                var url = $(this).attr('href');
                if (url) {
                    window.location.href = url; // Navega para a URL mantendo o comportamento normal
                }
            });
            
            // Manipulador para o seletor de itens por página
            $('#selectItensPorPagina').change(function() {
                var itensPorPagina = $(this).val();
                var statusFiltro = $('#filtroStatusColaborador').val() || '';
                var cargoFiltro = $('#filtroCargoColaborador').val() || '';
                var pesquisa = $('#pesquisaColaborador').val() || '';
                
                var url = '@Url.Action("Listar", "GerenciamentoColaboradores")' + 
                    '?pagina=1&itensPorPagina=' + itensPorPagina;
                
                if (statusFiltro) {
                    url += '&status=' + encodeURIComponent(statusFiltro);
                }
                
                if (cargoFiltro) {
                    url += '&cargo=' + encodeURIComponent(cargoFiltro);
                }
                
                if (pesquisa) {
                    url += '&pesquisa=' + encodeURIComponent(pesquisa);
                }
                
                window.location.href = url;
            });
            
            // Aplicar filtros quando mudar os campos de filtro
            $('#filtroStatusColaborador, #filtroCargoColaborador').change(function() {
                aplicarFiltros();
            });
            
            // Aplicar filtros ao pressionar Enter no campo de pesquisa
            $('#pesquisaColaborador').keypress(function(e) {
                if (e.which === 13) {
                    aplicarFiltros();
                    return false;
                }
            });
            
            // Limpar filtros
            $('#btnLimparFiltros').click(function() {
                window.location.href = '@Url.Action("Listar", "GerenciamentoColaboradores")';
            });
            
            function aplicarFiltros() {
                var statusFiltro = $('#filtroStatusColaborador').val();
                var cargoFiltro = $('#filtroCargoColaborador').val();
                var pesquisa = $('#pesquisaColaborador').val();
                
                var url = '@Url.Action("Listar", "GerenciamentoColaboradores")' + 
                    '?pagina=1&itensPorPagina=' + @ViewBag.ItensPorPagina;
                
                if (statusFiltro) {
                    url += '&status=' + encodeURIComponent(statusFiltro);
                }
                
                if (cargoFiltro) {
                    url += '&cargo=' + encodeURIComponent(cargoFiltro);
                }
                
                if (pesquisa) {
                    url += '&pesquisa=' + encodeURIComponent(pesquisa);
                }
                
                window.location.href = url;
            }
            
            // Atualizar URLs de paginação para incluir filtros
            $('.pagination .page-link').each(function() {
                var href = $(this).attr('href');
                if (href) {
                    var match = href.match(/pagina=(\d+)&itensPorPagina=(\d+)/);
                    if (match) {
                        var pagina = match[1];
                        var itensPorPagina = match[2];
                        $(this).attr('href', getUrlWithFilters(pagina, itensPorPagina));
                    }
                }
            });
            
            function getUrlWithFilters(pagina, itensPorPagina) {
                var statusFiltro = $('#filtroStatusColaborador').val();
                var cargoFiltro = $('#filtroCargoColaborador').val();
                var pesquisa = $('#pesquisaColaborador').val();
                
                var url = '@Url.Action("Listar", "GerenciamentoColaboradores")' + 
                    '?pagina=' + pagina + '&itensPorPagina=' + itensPorPagina;
                
                if (statusFiltro) {
                    url += '&status=' + encodeURIComponent(statusFiltro);
                }
                
                if (cargoFiltro) {
                    url += '&cargo=' + encodeURIComponent(cargoFiltro);
                }
                
                if (pesquisa) {
                    url += '&pesquisa=' + encodeURIComponent(pesquisa);
                }
                
                return url;
            }
            
            // Preencher o select de cargos com os valores disponíveis
            function preencherCargos() {
                var cargos = [];
                
                // Extrair cargos únicos da tabela
                $('.tabela-admin tbody tr').each(function() {
                    var cargo = $(this).find('td:nth-child(4)').text().trim();
                    if (cargo && cargos.indexOf(cargo) === -1) {
                        cargos.push(cargo);
                    }
                });
                
                // Ordenar cargos
                cargos.sort();
                
                // Adicionar opções ao select
                var select = $('#filtroCargoColaborador');
                cargos.forEach(function(cargo) {
                    select.append($('<option>', {
                        value: cargo,
                        text: cargo
                    }));
                });
            }
            
            preencherCargos();

            $('#formularioColaborador').on('submit', function(e) {
                e.preventDefault();
                var email = $('#emailColaborador').val();
                var cpf = $('#cpfColaborador').val();

                $.get('/Admin/Colaboradores/VerificarUsuario', { email: email, cpf: cpf })
                    .done(function(resp) {
                        if (resp.existe) {
                            $('#usuarioPromocaoId').val(resp.usuario.id);
                            $('#modalPromover').modal('show');
                        } else {
                            enviarFormulario();
                        }
                    })
                    .fail(function() {
                        toastr.error('Erro ao verificar usuário.');
                    });
            });

            function enviarFormulario() {
                var form = $('#formularioColaborador');
                $.post(form.attr('action'), form.serialize())
                    .done(function(res) {
                        if (res.sucesso) {
                            location.reload();
                        } else {
                            toastr.error(res.mensagem);
                        }
                    })
                    .fail(function() { toastr.error('Erro ao salvar colaborador.'); });
            }

            $('#botaoConfirmarPromocao').on('click', function() {
                var usuarioId = $('#usuarioPromocaoId').val();
                var cargo = $('#cargoColaborador').val();
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.post('/Admin/Colaboradores/PromoverUsuario', { usuarioId: usuarioId, cargo: cargo, __RequestVerificationToken: token })
                    .done(function(res) {
                        if (res.sucesso) {
                            $('#modalPromover').modal('hide');
                            location.reload();
                        } else {
                            toastr.error(res.mensagem);
                        }
                    })
                    .fail(function() { toastr.error('Erro ao promover usuário.'); });
            });
        });
    </script>
</body>
