@model List<CaotinhoAuMiau.Models.ViewModels.Admin.ColaboradorViewModel>
@{
    Layout = null;
    ViewData["Title"] = "Gerenciamento de Colaboradores";
    
    var cargoUsuario = User.ObterValorClaim("Cargo");
    var podeGerenciarColaboradores = cargoUsuario == "Administrador";
    
    var ativos = Model.Count(c => c.Ativo);
    var inativos = Model.Count(c => !c.Ativo);
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cãotinho AuMiau</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    
    
    <link rel="stylesheet" href="~/css/admin/admin-gerenciamento-colaboradores.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shared/paginacao.css" asp-append-version="true" />
    
    <style>
        
        .modal {
            z-index: 1050 !important;
        }
        .modal-backdrop {
            z-index: 1040 !important;
        }
        .barra-lateral {
            z-index: 100 !important;
        }
        .modal-open {
            overflow: auto !important;
            padding-right: 0 !important;
        }
        body.modal-open .conteudo-principal {
            filter: none !important;
        }
        
        
        body {
            font-family: 'Poppins', sans-serif;
        }
        
        .cartao-status .numero {
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
        }
        
        .cartao-status .rotulo {
            font-family: 'Poppins', sans-serif;
            font-weight: 500;
        }
        
        
    </style>
</head>
<body class="d-flex">
    
    @await Html.PartialAsync("~/Views/Shared/_SlidebarAdmin.cshtml")
    
    <div class="conteudo-principal">
        <div class="cabecalho-painel">
            <h1 class="titulo-pagina">Gerenciamento de Colaboradores</h1>
            @if (podeGerenciarColaboradores)
            {
                <button class="botao-acao-rapida" onclick="abrirModalColaborador('criar')" data-bs-toggle="modal" data-bs-target="#modalColaborador">
                    <i class="fas fa-plus me-2"></i>
                    Novo Colaborador
                </button>
            }
        </div>

        
        <div class="cartoes-status animate-entrada">
            <div class="cartao-status total delay-1">
                <div class="conteudo-cartao-status">
                    <div class="icone">
                    <i class="fas fa-users-cog"></i>
                </div>
                    <div class="d-flex flex-column align-items-start text-start">
                        <div class="rotulo">Total de Colaboradores</div>
                        <div class="numero">@ViewBag.TotalItens</div>
                    </div>
                </div>
            </div>
            <div class="cartao-status ativos delay-2">
                <div class="conteudo-cartao-status">
                    <div class="icone">
                    <i class="fas fa-user-check"></i>
                </div>
                    <div class="d-flex flex-column align-items-start text-start">
                        <div class="rotulo">Ativos</div>
                        <div class="numero">@ativos</div>
                    </div>
                </div>
            </div>
            <div class="cartao-status inativos delay-3">
                <div class="conteudo-cartao-status">
                    <div class="icone">
                    <i class="fas fa-user-slash"></i>
                </div>
                    <div class="d-flex flex-column align-items-start text-start">
                        <div class="rotulo">Inativos</div>
                        <div class="numero">@inativos</div>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="secao-filtros animate-entrada delay-1">
            <div class="row align-items-center">
                <div class="col-md-3 mb-2 mb-md-0">
                    <div class="caixa-pesquisa">
                        <i class="fas fa-search"></i>
                        <input type="text" id="pesquisaColaborador" class="form-control" placeholder="Buscar por nome, email ou CPF...">
                    </div>
                </div>
                <div class="col-md-3 mb-2 mb-md-0">
                    <select id="filtroStatusColaborador" class="form-select">
                        <option value="">Todos os status</option>
                        <option value="ativo">Ativo</option>
                        <option value="inativo">Inativo</option>
                    </select>
                </div>
                <div class="col-md-3 mb-2 mb-md-0">
                    <select id="filtroCargoColaborador" class="form-select">
                        <option value="">Todos os cargos</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-center">
                    <div class="flex-grow-1">
                        <button id="btnLimparFiltros" class="botao-secundario">
                            <i class="fas fa-undo me-1"></i> Limpar Filtros
                        </button>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="card shadow-sm rounded-4 border-0 mb-4">
            <div class="card-body p-0">
                <div class="tabela-responsiva">
                    <table class="tabela-admin">
                        <thead>
                            <tr>
                                <th scope="col">Nome</th>
                                <th scope="col">Email</th>
                                <th scope="col">CPF</th>
                                <th scope="col">Cargo</th>
                                <th scope="col">Status</th>
                                <th scope="col">Data Cadastro</th>
                                <th scope="col">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var colaborador in Model)
                            {
                                <tr>
                                    <td>@colaborador.Nome</td>
                                    <td>@colaborador.Email</td>
                                    <td>
                                        @(colaborador.CPF.Length == 11 
                                            ? colaborador.CPF.Substring(0,3) + "." + colaborador.CPF.Substring(3,3) + "." + colaborador.CPF.Substring(6,3) + "-" + colaborador.CPF.Substring(9,2) 
                                            : colaborador.CPF)
                                    </td>
                                    <td>@colaborador.Cargo</td>
                                    <td>
                                        @if (colaborador.Ativo)
                                        {
                                            <span class="indicador-status ativo">Ativo</span>
                                        }
                                        else
                                        {
                                            <span class="indicador-status inativo">Inativo</span>
                                        }
                                    </td>
                                    <td>@colaborador.DataCadastro.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (colaborador.Id != 1)
                                        {
                                            @if (podeGerenciarColaboradores)
                                            {
                                                <div class="grupo-acoes">
                                                    <button class="botao-acao-tabela editar" onclick="editarColaborador(@colaborador.Id)" title="Editar">
                                                        <i class="fas fa-pencil-alt"></i>
                                                    </button>
                                                    <button class="botao-acao-tabela visualizar" onclick="visualizarDetalhesColaborador(@colaborador.Id)" title="Ver Detalhes">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    @if (colaborador.Ativo)
                                                    {
                                                        <button class="botao-acao-tabela desativar" onclick="abrirModalStatus(@colaborador.Id, '@colaborador.Nome', 'desativar')" title="Desativar">
                                                            <i class="fas fa-user-slash"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button class="botao-acao-tabela ativar" onclick="abrirModalStatus(@colaborador.Id, '@colaborador.Nome', 'ativar')" title="Ativar">
                                                            <i class="fas fa-user-check"></i>
                                                        </button>
                                                    }
                                                    <button class="botao-acao-tabela excluir" onclick="abrirModalExcluir(@colaborador.Id, '@colaborador.Nome')" title="Excluir">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="grupo-acoes">
                                                    <button class="botao-acao-tabela visualizar" onclick="visualizarDetalhesColaborador(@colaborador.Id)" title="Ver Detalhes">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                </div>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    
                    @if (ViewBag.TotalPaginas > 0)
                    {
                        <div class="paginacao-container w-100">
                            <div class="paginacao mt-4">
                                <nav aria-label="Navegação de páginas">
                                    <ul class="pagination justify-content-center flex-wrap">
                                        @if (ViewBag.PaginaAtual > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="@Url.Action("Listar", "GerenciamentoColaboradores", new { pagina = ViewBag.PaginaAtual - 1, itensPorPagina = ViewBag.ItensPorPagina })">
                                                    <i class="fas fa-chevron-left"></i>
                                                </a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="page-item disabled">
                                                <span class="page-link"><i class="fas fa-chevron-left"></i></span>
                                            </li>
                                        }

                                        @{int inicio = Math.Max(1, ViewBag.PaginaAtual - 2);
                                          int fim = Math.Min(ViewBag.TotalPaginas, ViewBag.PaginaAtual + 2);
                                          if (fim - inicio + 1 < 5 && ViewBag.TotalPaginas >= 5)
                                          {
                                              if (ViewBag.PaginaAtual <= 3)
                                              {
                                                  fim = Math.Min(5, ViewBag.TotalPaginas);
                                              }
                                              else
                                              {
                                                  inicio = Math.Max(1, ViewBag.TotalPaginas - 4);
                                              }
                                          }}
                                        @for (int i = inicio; i <= fim; i++)
                                        {
                                            <li class="page-item @(i == ViewBag.PaginaAtual ? "active" : "")">
                                                <a class="page-link" href="@Url.Action("Listar", "GerenciamentoColaboradores", new { pagina = i, itensPorPagina = ViewBag.ItensPorPagina })">@i</a>
                                            </li>
                                        }

                                        @if (ViewBag.PaginaAtual < ViewBag.TotalPaginas)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="@Url.Action("Listar", "GerenciamentoColaboradores", new { pagina = ViewBag.PaginaAtual + 1, itensPorPagina = ViewBag.ItensPorPagina })">
                                                    <i class="fas fa-chevron-right"></i>
                                                </a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="page-item disabled">
                                                <span class="page-link"><i class="fas fa-chevron-right"></i></span>
                                            </li>
                                        }
                                    </ul>
                                </nav>
                            </div>
                            
                            <div class="paginacao-info mt-3 d-flex justify-content-between align-items-center">
                                <div class="info-paginacao">
                                    Exibindo <span>@Model.Count()</span> de <span>@ViewBag.TotalItens</span> colaboradores
                                </div>
                                <div class="itens-por-pagina">
                                    <label for="selectItensPorPagina">Itens por página:</label>
                                    <select id="selectItensPorPagina" class="form-select form-select-sm">
                                        @foreach (var opcao in new[] { 10, 20, 50 })
                                        {
                                            if (ViewBag.ItensPorPagina == opcao)
                                            {
                                                <option value="@opcao" selected>@opcao</option>
                                            }
                                            else
                                            {
                                                <option value="@opcao">@opcao</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    
    <div class="modal fade" id="modalColaborador" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="tituloModalColaborador" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="modal-header bg-gradient-primary text-white py-4 position-relative">
                    <div class="ms-5 ps-2">
                        <h5 class="modal-title text-white fw-bold mb-1" id="tituloModalColaborador">Novo Colaborador</h5>
                        <p class="text-white-50 mb-0 small">Preencha os dados para adicionar um novo colaborador ao sistema</p>
                    </div>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body p-4">
                    <form id="formularioColaborador" action="/Admin/Colaboradores/CadastrarColaborador" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="colaboradorId" name="Id" value="0">
                        
                        <div class="card border-0 shadow-sm rounded-4 mb-4">
                            <div class="card-header bg-light border-0 py-3">
                                <h6 class="card-title mb-0"><i class="fas fa-info-circle me-2 text-primary"></i>Informações Pessoais</h6>
                            </div>
                            <div class="card-body p-4">
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="form-floating position-relative admin-form-group">
                                            <div class="field-icon-container">
                                                <i class="fas fa-user text-primary"></i>
                                            </div>
                                            <input type="text" class="form-control ps-5" id="nomeColaborador" name="Nome" placeholder="Nome completo" required>
                                            <label for="nomeColaborador" class="ps-5">Nome Completo</label>
                                            <div class="mensagem-erro" id="nomeColaborador-erro"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating position-relative admin-form-group">
                                            <div class="field-icon-container">
                                                <i class="fas fa-envelope text-primary"></i>
                                            </div>
                                            <input type="email" class="form-control ps-5" id="emailColaborador" name="Email" placeholder="email@exemplo.com" required>
                                            <label for="emailColaborador" class="ps-5">Email</label>
                                            <div class="mensagem-erro" id="emailColaborador-erro"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating position-relative admin-form-group">
                                            <div class="field-icon-container">
                                                <i class="fas fa-id-card text-primary"></i>
                                            </div>
                                            <input type="text" class="form-control ps-5 mascara-cpf" id="cpfColaborador" name="CPF" placeholder="000.000.000-00" required>
                                            <label for="cpfColaborador" class="ps-5">CPF</label>
                                            <div class="mensagem-erro" id="cpfColaborador-erro"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating position-relative admin-form-group">
                                            <div class="field-icon-container">
                                                <i class="fas fa-phone text-primary"></i>
                                            </div>
                                            <input type="text" class="form-control ps-5 mascara-telefone" id="telefoneColaborador" name="Telefone" placeholder="(00) 00000-0000" required>
                                            <label for="telefoneColaborador" class="ps-5">Telefone</label>
                                            <div class="mensagem-erro" id="telefoneColaborador-erro"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="card border-0 shadow-sm rounded-4 mb-4">
                            <div class="card-header bg-light border-0 py-3">
                                <h6 class="card-title mb-0"><i class="fas fa-briefcase me-2 text-primary"></i>Informações Funcionais</h6>
                            </div>
                            <div class="card-body p-4">
                                <div class="row g-4">
                                    <div class="col-12">
                                        <div class="form-floating position-relative admin-form-group">
                                            <div class="field-icon-container">
                                                <i class="fas fa-briefcase text-primary"></i>
                                            </div>
                                            <input type="text" class="form-control ps-5" id="cargoColaborador" name="Cargo" placeholder="Cargo" required>
                                            <label for="cargoColaborador" class="ps-5">Cargo</label>
                                            <div class="mensagem-erro" id="cargoColaborador-erro"></div>
                                        </div>
                                    </div>
                                    <input type="hidden" id="ativoColaborador" name="Ativo" value="true">
                                </div>
                            </div>
                        </div>
                        
                        <div class="card border-0 shadow-sm rounded-4 mb-4">
                            <div class="card-header bg-light border-0 py-3">
                                <h6 class="card-title mb-0"><i class="fas fa-lock me-2 text-primary"></i>Credenciais de Acesso</h6>
                            </div>
                            <div class="card-body p-4">
                                <div class="row g-4">
                                    <div class="col-12" id="containerSenhaAtual" style="display:none;">
                                        <div class="form-floating position-relative admin-form-group">
                                            <div class="field-icon-container">
                                                <i class="fas fa-lock text-primary"></i>
                                            </div>
                                            <input type="password" class="form-control ps-5" id="senhaAtualColaborador" name="SenhaAtual" 
                                                   placeholder="Senha atual" autocomplete="current-password">
                                            <label for="senhaAtualColaborador" class="ps-5">Senha Atual</label>
                                            <button type="button" class="toggle-password" title="Mostrar senha" onclick="alternarVisibilidadeSenha('senhaAtualColaborador')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <div class="mensagem-erro" id="senhaAtualColaborador-erro"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6" id="containerSenha">
                                        <div class="form-floating position-relative admin-form-group">
                                            <div class="field-icon-container">
                                                <i class="fas fa-lock text-primary"></i>
                                            </div>
                                            <input type="password" class="form-control ps-5" id="senhaColaborador" name="Senha" 
                                                   placeholder="Senha" minlength="6" autocomplete="new-password" required
                                                   aria-describedby="senhaColaborador-erro">
                                            <label for="senhaColaborador" class="ps-5">Senha</label>
                                            <button type="button" class="toggle-password" title="Mostrar senha" onclick="alternarVisibilidadeSenha('senhaColaborador')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <div class="mensagem-erro" id="senhaColaborador-erro"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6" id="linhaConfirmarSenha">
                                        <div class="form-floating position-relative admin-form-group">
                                            <div class="field-icon-container">
                                                <i class="fas fa-lock text-primary"></i>
                                            </div>
                                            <input type="password" class="form-control ps-5" id="confirmarSenhaColaborador" name="ConfirmarSenha" 
                                                   placeholder="Confirmar Senha" minlength="6" autocomplete="new-password" required
                                                   aria-describedby="confirmarSenhaColaborador-erro">
                                            <label for="confirmarSenhaColaborador" class="ps-5">Confirmar Senha</label>
                                            <button type="button" class="toggle-password" title="Mostrar senha" onclick="alternarVisibilidadeSenha('confirmarSenhaColaborador')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <div class="mensagem-erro" id="confirmarSenhaColaborador-erro"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="modal-footer">
                            <button type="button" class="botao-contorno-cinza rounded-pill px-4 py-2 botao-modo-edicao" data-bs-dismiss="modal">
                                <i class="fas fa-times me-2"></i>
                                Cancelar
                            </button>
                            <button type="submit" id="botaoSalvarColaborador" class="botao-acao-rapida rounded-pill px-4 py-2 botao-modo-edicao">
                                <i class="fas fa-save me-2"></i>
                                Salvar
                            </button>
                            <button type="button" class="botao-secundario rounded-pill px-4 py-2 botao-modo-visualizacao" data-bs-dismiss="modal" style="display: none;">
                                <i class="fas fa-times me-2"></i>
                                Fechar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    
    <div class="modal fade" id="modalConfirmacao" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header p-4" id="cabecalhoModalConfirmacao">
                    <h5 class="modal-title fw-bold"></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body text-center p-4">
                    <div class="circulo-icone mb-3">
                        <i class="fas fa-question"></i>
                    </div>
                    <h5 class="fw-bold mb-3" id="tituloConfirmacao"></h5>
                    <p class="mb-4" id="mensagemConfirmacao"></p>
                    <input type="hidden" id="idColaboradorConfirmacao" value="">
                    <input type="hidden" id="acaoConfirmacao" value="">
                </div>
                <div class="modal-footer p-3">
                    <button type="button" class="botao-secundario" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>
                        Cancelar
                    </button>
                    <button type="button" id="botaoConfirmarAcao" class="botao-acao-rapida">
                        <i class="fas fa-check me-2"></i>
                        Confirmar
                    </button>
                </div>
            </div>
        </div>
    </div>

    @Html.AntiForgeryToken()
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/lib/vanilla-masker/vanilla-masker.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script src="~/js/admin/gerenciamento-colaboradores.js" asp-append-version="true"></script>

    
    <div class="modal fade" id="modalStatus" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-user-check me-2"></i><span id="tituloStatus">Confirmar Ação</span></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body text-center">
                    <div class="circulo-icone mb-4">
                        <i class="fas fa-user-check icone-excluir"></i>
                    </div>
                    <h4 class="mb-3" id="subtituloStatus">Tem certeza?</h4>
                    <p class="mb-3">Você está prestes a <span id="nomeColaboradorStatus" class="fw-bold"></span>.</p>
                    <p class="text-muted mb-0"><i class="fas fa-info-circle me-1"></i>Essa ação pode ser revertida.</p>
                    <input type="hidden" id="idStatus" value="">
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="botao-contorno-secundario" data-bs-dismiss="modal"><i class="fas fa-times me-2"></i>Cancelar</button>
                    <button type="button" class="botao-perigo" id="botaoConfirmarStatus"><i class="fas fa-user-check me-2"></i>Confirmar</button>
